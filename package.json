{
  "name": "white-board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:clean": "HIDE_DEV_INDICATOR=true next dev --turbopack",
    "build": "next build",
    "start": "next start -p 3000 -H 0.0.0.0",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:update": "playwright test --update-snapshots",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "generate-api": "openapi --input ./src/lib/open-api/open-api.json --output ./src/lib/open-api/api-client --name ApiClient --useOptions --useUnionTypes"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.14.0",
    "@tanstack/react-query": "^5.84.2",
    "canvas": "^3.2.0",
    "date-fns": "^4.1.0",
    "immer": "^10.1.3",
    "konva": "^9.3.22",
    "next": "^15.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-konva": "^19.0.7",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.4.5",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.19.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "import-in-the-middle": "^1.14.4",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "openapi-typescript-codegen": "^0.29.0",
    "require-in-the-middle": "^7.5.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  }
}
